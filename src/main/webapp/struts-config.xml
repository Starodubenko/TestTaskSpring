        <!--name="searchForm">-->
        <!--<forward name="success" path="/WEB-INF/pages/detail.jsp"/>-->
        <!--<forward name="failure" path="/WEB-INF/pages/search.jsp"/>-->
        <!--</action>-->

    </action-mappings>
</struts-config>
